{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voxterrae.github.io/HUB_Optimus/scenario.schema.json",
  "title": "HUB_Optimus Scenario",
  "description": "Minimal contract for run_scenario.py JSON input files.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "description",
    "roles",
    "success_criteria",
    "max_rounds"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "pattern": ".*\\S.*"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "pattern": ".*\\S.*"
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "role"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "pattern": ".*\\S.*"
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "pattern": ".*\\S.*"
          }
        }
      }
    },
    "success_criteria": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "integer",
          "boolean",
          "null"
        ]
      }
    },
    "max_rounds": {
      "type": "integer",
      "minimum": 1
    }
  }
}
